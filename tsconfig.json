{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "skipLibCheck": true,
    "module": "esnext",
    "rootDir": "src",
    "outDir": "dist",
    "removeComments": false,
    "esModuleInterop": true,
    "strict": true
  }
}
